{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "todox Configuration",
  "description": "Configuration for todox TODO tracking tool",
  "type": "object",
  "properties": {
    "blame": {
      "description": "Git blame analysis settings",
      "allOf": [
        {
          "$ref": "#/definitions/BlameConfig"
        }
      ]
    },
    "check": {
      "description": "CI gate check settings",
      "allOf": [
        {
          "$ref": "#/definitions/CheckConfig"
        }
      ]
    },
    "clean": {
      "description": "Clean detection settings",
      "allOf": [
        {
          "$ref": "#/definitions/CleanConfig"
        }
      ]
    },
    "exclude_dirs": {
      "description": "Directory names to skip during scanning",
      "default": [],
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "exclude_patterns": {
      "description": "Regex patterns; matching file paths are excluded",
      "default": [],
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "lint": {
      "description": "Lint rule settings",
      "allOf": [
        {
          "$ref": "#/definitions/LintConfig"
        }
      ]
    },
    "tags": {
      "description": "Tags to scan for (e.g., TODO, FIXME, HACK)",
      "default": [
        "TODO",
        "FIXME",
        "HACK",
        "XXX",
        "BUG",
        "NOTE"
      ],
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "workspace": {
      "description": "Workspace/monorepo settings",
      "allOf": [
        {
          "$ref": "#/definitions/WorkspaceConfig"
        }
      ]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "BlameConfig": {
      "description": "Git blame analysis settings",
      "type": "object",
      "properties": {
        "stale_threshold": {
          "description": "Duration threshold for marking TODOs as stale (e.g., \"180d\")",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "CheckConfig": {
      "description": "CI gate check settings",
      "type": "object",
      "properties": {
        "block_tags": {
          "description": "Tags that cause check to fail immediately",
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "expired": {
          "description": "Fail if any TODOs have expired deadlines",
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        },
        "max": {
          "description": "Maximum total TODOs allowed",
          "default": null,
          "type": [
            "integer",
            "null"
          ],
          "format": "uint",
          "minimum": 0.0
        },
        "max_new": {
          "description": "Maximum new TODOs allowed (requires --since)",
          "default": null,
          "type": [
            "integer",
            "null"
          ],
          "format": "uint",
          "minimum": 0.0
        }
      },
      "additionalProperties": false
    },
    "CleanConfig": {
      "description": "Clean detection settings for stale issues and duplicates",
      "type": "object",
      "properties": {
        "duplicates": {
          "description": "Enable duplicate detection (default: true)",
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        },
        "since": {
          "description": "Only flag issues closed longer than this duration (e.g., \"30d\")",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "stale_issues": {
          "description": "Enable stale issue detection (default: true)",
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "LintConfig": {
      "description": "Lint rule settings for TODO comment formatting",
      "type": "object",
      "properties": {
        "max_message_length": {
          "description": "Enforce max message character count",
          "default": null,
          "type": [
            "integer",
            "null"
          ],
          "format": "uint",
          "minimum": 0.0
        },
        "no_bare_tags": {
          "description": "Reject TODOs with empty message (default: true)",
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        },
        "require_author": {
          "description": "Require (author) for specified tags",
          "default": null,
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "require_colon": {
          "description": "Enforce colon after tag (default: true)",
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        },
        "require_issue_ref": {
          "description": "Require issue ref (#N) for specified tags",
          "default": null,
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "uppercase_tag": {
          "description": "Enforce uppercase tag names (default: true)",
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "PackageCheckConfig": {
      "description": "Per-package check configuration",
      "type": "object",
      "properties": {
        "block_tags": {
          "description": "Tags that cause check to fail for this package",
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "max": {
          "description": "Maximum total TODOs allowed for this package",
          "default": null,
          "type": [
            "integer",
            "null"
          ],
          "format": "uint",
          "minimum": 0.0
        }
      },
      "additionalProperties": false
    },
    "WorkspaceConfig": {
      "description": "Workspace/monorepo settings",
      "type": "object",
      "properties": {
        "auto_detect": {
          "description": "Enable automatic workspace detection (default: true)",
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        },
        "packages": {
          "description": "Per-package check configuration",
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/PackageCheckConfig"
          }
        }
      },
      "additionalProperties": false
    }
  }
}
